
verde_A = #97C335
.Canvas
	max-width 500px
	overflow hidden //se oculta todo lo que se salga del canvas
	position relative //los elementos de abajo se situan relativas a este elemento, ya que es el elemento más cercano a ellos con posición relativa
	&-main
		padding 10px 0 //como h1 tiene margen, se le pone padding para que se vea este elemento y no quede comido por el otro
	//&-header
	//	width 200px //tamaño del elemento
	//	position absolute
	//	left -200px //se le situa 200px fuera del layout
	//	top 0
	//	-webkit-transition 1s
	//	&.is-active
	//		left 0
	&-sidebar
		position absolute
		width 200px
		right -200px
		top 0
		-webkit-transition 1s
		&.is-active
			right 0
.Header
	background #141F23
	padding 10px 0
	color white
	&-logo
		text-transform uppercase
		font-weight normal
		text-decoration underline
		text-shadow 0 0 10px verde_A
	&-button
		background orange
		color white
		border-radius 10px
		padding 12px
		border none
		position absolute
		right 20px
		top 30px
.MainMenu
	padding 0 //los ul tienen padding por defecto. De esta manera se deja a 0
	&-link
		color white
		text-decoration none
		text-transform uppercase
		font-size 14px
		text-align center //se centran los links con el centro de su contenedor
		
		